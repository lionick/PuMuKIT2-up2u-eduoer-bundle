{% extends 'PumukitWebTVBundle::default.css.twig' %}

{% block body %}

{# HERE you can set your variables to be overrided #}
{# Examples: #}
{% set content_max_width = "1350px" %}
{% set default_content_font = "#004361" %}
{% set default_light_font = "#ed1556" %}
{% set panel_default_background = "#E9E9E9" %}
{% set panel_default_font = "#000" %}
{#{% set default_light_background = "" %}#}
{% set header_background = '#b7b6b6 url(' ~asset('bundles/pumukitgeantwebtv/images/header_bg_side.png')~'); background-size: contain;' %}
{% set big_breadcrumbs = true %}
{% set breadcrumbs_separator = " " %}
{% set page_background = 'white' %}
{% set mmobj_selected_background = '#E9E9E9' %}
{{ parent() }}
{# Add your own CSS rules #}
.icon-share:before {
    content: '\e1214';
    font-family: fontello;
}
a{
    color: {{default_light_font}};
}
a:hover{
    color: grey;
    border-bottom: 1px dotted grey;
}
a small {
    color: {{default_light_font}};
}
a small:hover {
    color: grey;
    border-bottom: 1px dotted grey;
}
.index_container a:hover {
    border-bottom: none;
}

.static_content p {
    margin: 10px 5px;
    text-align: justify;
}
body {
    font-family: "Segoe UI", "Segoe", Tahoma, Helvetica, 'Open Sans', Arial, sans-serif;
    font-weight: lighter;
}
h1 {
    font-size: 36px;
}
h1.title-for-crumbs{
    border-bottom: 0px;
    font-weight: normal;
    font-size: 3.8em;
}
.header-content{
    padding-top:10px;
}
footer{
    max-width: {{content_max_width}};
    margin: 0 auto;
    background: #004361;
    color: #fff;
    padding: 0px 10px 20px;
}
.footer_row {
    background: #004361;
    color: #fff;
}
#footer-links a{
    color: #fff;
}
#footer-links li {
    float: left;
    list-style-type: none;
    background-image: url('{{asset('bundles/pumukitgeantwebtv/images/bullet.png')}}');
    background-repeat: no-repeat;
    background-position: left;
    padding-right: 5px;
    padding-left: 11px;
}
#footer-links li:first-child {
background: none;
}
{# STATIC PAGES #}
.static_content h2{
    font-size: 36px;
    font-weight: bold;
    line-height: 1.16667em;
    padding: .5em 0;
}
.static_content{
    font-size: 16px;
    color: {{default_content_font}};
}
{# END STATIC PAGES#}
{# CATEGORIES PAGE #}
.channel-list h2 {
    font-size: 22px;
    line-height: 1.36364em;
    margin-bottom: 22px;
ï¿¼    padding: .31818em 0;
    font-weight: bold;
}
.channel-list p {
    font-size: 16px;
    line-height: 1.5em;
}
.channel-list ul {
    margin-bottom: 20px;
}
{# END CATEGORIES PAGE #}
abbr[title]  {
 text-decoration: none;
 border-bottom: none;
}
.number-videos.serial {
    position: absolute;
    top: 0px;
    left: 5px;
    z-index: 10;
}
.number-videos.serial p {
    z-index:10;
    color: white;
    background: black;
    display: inline;
    text-align: center;
    opacity: 0.50;
    font-size: 0.85em;
    padding: 1px 2px;
}
.pumukit_album .thumbnailholder {
    background: #f3f3f3;
}
.title.tagcatalogue {
    font-size: 1.2em;
    margin-left: 20px;
    margin-top: 2px;
}
.info .title, .info .title a {
    color: {{default_light_font}};
    cursor: pointer;
    font-size: 1em;
    font-weight: 1800;
    font-family: 'Arial Narrow', Arial;
    font-stretch: condensed;
}
.mmobj_thumbnail_title:hover {
    border-bottom: 1px dotted grey;
}
.pumukit_mmobj:hover .info .title {
    color: grey;
    text-decoration-style: dotted;
    -moz-text-decoration-style: dotted;
    -webkit-text-decoration-style: dotted;
}

.main_menu_text {
    color: {{default_content_font}};
    font-size: 16px;
    margin: 30px 0;
}

.play_icon {
    margin: 5px;
    margin-left: 8px;
    background-image: url("{{asset('bundles/pumukitgeantwebtv/images/play_icon.png')}}");
    width: 18px;
    height: 13px;
}
.play_icon.small {
    width: 18px;
    height: 13px;
}
.index_widget {
    margin-top: 50px;
    margin-bottom: 50px;
}
.breadcrumb li {
    background-image: url("{{asset('bundles/pumukitgeantwebtv/images/crumbs_arrow.png')}}");
    background-repeat: no-repeat;
    background-position: right 0;
    padding-right: 10px;
}
.breadcrumb li:last-of-type {
    background-image: none;
    font-size: 3.8em;
}

.widget.slidebar a{
    font-weight: normal;
    font-size: 1em;
    border-bottom: 1px dotted grey;
    padding-left: 5px;
}
.widget.slidebar a:hover, .widget.slidebar a.selected{
    background: #e9e9e9;
    color: #000;
    margin-left: 0px;
    padding-left: 5px;
    z-index: 10;
    transition: background 0.3s ease;
}
.widget.slidebar a.selected {
    font-weight: bold;
    background: none;
    color: {{default_light_font}};
}
.widget.slidebar::before {
    content: "Menu";
    font-size: 1.25em;
    font-weight: bold;
    color: #004361;
    line-height: 24px;
    border-bottom: 0;
    margin-bottom: 10px;
    padding-left: 5px;
}
.menu.navbar {
    margin-top: 10px;
    padding-right: 30px;
}
.pumukit_mmobj {
    border-radius: 0;
}

{% endblock %}
